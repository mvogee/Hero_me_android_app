<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hero_bg_gradient"
    tools:context="com.matthewvogee.herome.Fragments.MainFragment">

    <!-- TODO: Update blank fragment layout -->



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="0dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="0dp">

        <TextView
            android:id="@+id/hdygyp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="8dp"
            android:text="How did you get your powers?"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorSuperYellow"
            android:textSize="18sp"
            android:textStyle="bold" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:src="@drawable/heroes" />

        <Button
            android:id="@+id/button_cameByAccident"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/lightning_icon"
            android:drawableRight="@drawable/emptyimage"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:text="Came by Accident"
            android:textColor="@color/colorSuperYellow"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_geneticMutation"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/atomic_icon"
            android:drawableRight="@drawable/emptyimage"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:text="Genetic Mutation"
            android:textColor="@color/colorSuperYellow"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_bornWithThem"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/rocket_icon"
            android:drawableRight="@drawable/emptyimage"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:text="Born with them"
            android:textColor="@color/colorSuperYellow"
            android:textSize="15sp" />

        <Button
            android:id="@+id/button_choosePowers"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginTop="12dp"
            android:background="@drawable/hero_solid_button"
            android:backgroundTint="@color/colorSuperYellow"
            android:paddingLeft="6dp"
            android:paddingRight="10dp"
            android:text="Choose Powers"
            android:textColor="@color/colorSolidButtonText"
            android:textSize="18sp" />
    </LinearLayout>

</FrameLayout>
