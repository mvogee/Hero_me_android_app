<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/hero_bg_gradient"
    tools:context="com.matthewvogee.herome.Fragments.BackStoryFragment">

    <!-- TODO: Update blank fragment layout -->

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/textView_superheroName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:gravity="center_horizontal"
            android:paddingBottom="2dp"
            android:paddingTop="8dp"
            android:text="SUPERMAN"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"

            android:textColor="@color/colorSuperYellow"
            android:textSize="19sp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView_backStory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="BACKSTORY"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="0dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintHorizontal_bias="0.502"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/textView_superheroName"
            android:layout_marginBottom="0dp"
            app:layout_constraintBottom_toTopOf="@+id/textView_storyText" />

        <ImageView
            android:id="@+id/imageView_superherIcon"
            android:layout_width="75dp"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            app:srcCompat="@drawable/supermancrest_icon"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginLeft="16dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/textView_storyText"
            android:layout_width="285dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="0dp"
            android:paddingTop="8dp"
            android:text="Lorem ipsum dolor sit amet, consectetuer adipiscing elit. Aenean commodo ligula eget dolor. Aenean massa. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Donec quam felis, ultricies nec, pellentesque eu, pretium quis, sem. Nulla consequat massa quis enim. Donec pede justo, fringilla vel, aliquet nec, vulputate eget, arcu. In enim justo, rhoncus ut, imperdiet a, venenatis vitae, justo. Nullam dictum felis eu pede mollis pretium. Integer tincidunt. Cras dapibus. Vivamus elementum semper nisi. Aenean vulputate eleifend."
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="12sp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView_superherIcon" />

        <TextView
            android:id="@+id/textView_primaryPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginTop="9dp"
            android:text="PRIMARY POWER"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.038"
            app:layout_constraintLeft_toLeftOf="@+id/button_primaryPowerDisplay"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_storyText" />

        <Button
            android:id="@+id/button_primaryPowerDisplay"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/supermancrest_icon"
            android:drawableRight="@drawable/emptyimage"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="FLIGHT"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorSuperYellow"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_primaryPower" />

        <TextView
            android:id="@+id/textView_secondaryPower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginTop="8dp"
            android:text="SECONDARY POWER"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textSize="11sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.042"
            app:layout_constraintLeft_toLeftOf="@+id/button_secondaryPower"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_primaryPowerDisplay" />

        <Button
            android:id="@+id/button_secondaryPower"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginTop="0dp"
            android:background="@drawable/hero_button"
            android:drawableLeft="@drawable/superstrength_icon"
            android:drawableRight="@drawable/emptyimage"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="SUPER STRENTH"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:textColor="@color/colorSuperYellow"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView_secondaryPower" />

        <Button
            android:id="@+id/button_startOver"
            android:layout_width="275dp"
            android:layout_height="50dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="16dp"
            android:background="@drawable/hero_solid_button"
            android:backgroundTint="@color/colorSuperYellow"
            android:text="Start Over"
            android:textColor="@color/colorSolidButtonText"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintHorizontal_bias="0.517"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/button_secondaryPower" />

    </android.support.constraint.ConstraintLayout>

</FrameLayout>
